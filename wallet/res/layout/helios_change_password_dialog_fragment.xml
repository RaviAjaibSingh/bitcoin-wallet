<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/helios_change_password_dialog_fragment_new_password_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/helios_change_password_dialog_fragment_hint1"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/helios_change_password_dialog_fragment_new_password_edit_text_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/helios_change_password_dialog_fragment_new_password_edit_text"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/helios_change_password_dialog_fragment_hint2"
        android:inputType="textPassword" />

</RelativeLayout>